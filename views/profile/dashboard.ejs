<div class="row menu-myplaces">
  <div class="col s12 user-name">
    <h3><%=user.username%></h3></div>
</div>
</div>

<div class="row menu-toolbar">
  <div class="col s4 no-padding-button">
    <a href="/profile"><button class="menu-button">ALL</button></a>
  </div>

  <div class="col s4 no-padding-button">
<a href="/profile/wannavisit"><button class="menu-button">WANNA VISIT</button></a>
  </div>

  <div class="col s4 no-padding-button">
  <a href="/profile/visited"><button class="menu-button">VISITED</button></a>  </div>
</div>

<ul>
  <% for(var i = 0; i < restaurants.length; i++) { %>

    <div class="row">
      <div class="col s12 m6">
        <div class="card">
            <% if(restaurants[i].visited){ %>
          <div class="card-image waves-effect waves-block waves-light"><img src="<%= rating[i].pic_path%>" alt=""></div>
            <% } %>

          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= restaurants[i].name %><i class="material-icons right">more_vert</i></span>
            <% if (!restaurants[i].visited) { %>
              <a href="/rating/<%= restaurants[i]._id %>" class="btn-floating halfway-fab waves-effect waves-light blue"><i class="material-icons">rate_review</i></a>
              <% } %>
                <p>
                  <%= restaurants[i].address %>
                </p>
                <p><a href="<%= restaurants[i].website%>">Website</a>
                </p>

                <% if(restaurants[i].visited){ %>
                  <div class="row front-icon-bar">
                  <div class="col s4"><p><i class="material-icons left front-icons">local_dining</i><%= rating[i].food%></p></div>
                  <div class="col s4"><p><i class="material-icons left front-icons">euro_symbol</i><%= rating[i].price%></p></div>
                  <div class="col s4"><p><i class="material-icons left front-icons">local_bar</i><%= rating[i].ambience%></p></div>
                </div>
                <% } %>
          </div>
          </div>

          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">Rating<i class="material-icons right">close</i></span>
            <% if(restaurants[i].visited){ %>
              <br>
              <p><i class="material-icons left">local_dining</i>Food: <%= rating[i].food%></p>
              <p><i class="material-icons left">euro_symbol</i>Price: <%= rating[i].price%></p>
              <p><i class="material-icons left">local_bar</i>Ambience: <%= rating[i].ambience%></p>
              <p><i class="material-icons left">sentiment_very_satisfied</i>Customer Service: <%= rating[i].customerService%></p>
              <p><i class="material-icons left">wc</i>Occasion: <%= rating[i].occasion%></p>
              <p><i class="material-icons left">insert_comment</i>Comment: <%= rating[i].Comment%></p>

              <form action="/restaurant/<%= restaurants[i]._id %>/delete" method="POST">
                <button id="dltButton" type="submit"><i class="material-icons">delete</i>Delete</button>
              </form>
            <% } %>

          </div>
        </div>
      </div>
    </div>

    <% } %>
</ul>
