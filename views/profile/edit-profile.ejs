
  <form action="/profile/edit"  enctype="multipart/form-data" method="post">
    <div>
      <label> Username </label>
      <input type="text" name="username" id="user-input"
        value="<%=user.username%>">
    </div>
    <br>
    <div>
      <label> Email </label>
      <input type="text" name="email" id="user-input"
        value="<%=user.email%>">
    </div>
    <br>
    <div>
      <label> Full Name </label>
      <input type="text" name="fullname" id="user-input"
        placeholder="Full Name">
    </div>
<br>
    <div>
      <!-- There is something wrong with the selector of gender because it only allows you to be female -->
      <p>
      <input type="checkbox" name="gender" id="test5" />
